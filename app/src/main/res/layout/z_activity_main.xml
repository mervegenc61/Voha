<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:id="@+id/coordinatorlayout"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:fitsSystemWindows="true">
    <!--SORU CEVAP ŞIKLAR -->
    <LinearLayout
        android:id="@+id/ll_btnsorucevap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:orientation="vertical"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:id="@+id/tv_algoritmasoru"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:background="@drawable/options"
                android:textAlignment="center"
                android:textColor="@color/fistikyesili"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="invisible"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="-140dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                android:gravity="bottom"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_optionA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/options"
                    android:drawableLeft="@drawable/ic_chevron_right_black_24dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/grey_800"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:visibility="invisible"
                  />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_optionB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/options"
                    android:drawableLeft="@drawable/ic_chevron_right_black_24dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/grey_800"
                    android:textSize="16sp"
                    android:visibility="invisible"

                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                android:gravity="top"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_optionC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/options"
                    android:drawableLeft="@drawable/ic_chevron_right_black_24dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/grey_800"
                    android:textSize="16sp"
                    android:visibility="invisible"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="-25dp"
                android:layout_weight="0.5"
                android:gravity="top"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_optionD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/options"
                    android:drawableLeft="@drawable/ic_chevron_right_black_24dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/grey_800"
                    android:textSize="16sp"
                    android:visibility="invisible"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <!--SORU CEVAP ŞIK SONU -->
    <!--  <ProgressBar
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_height="10dp"
        android:id="@+id/progress"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:max="100"
        android:progressDrawable="@drawable/progressbar"
        android:progress="45"/>-->

    <!--KOD ÇIKTI -->
    <android.support.v7.widget.CardView
        android:id="@+id/cv_kod"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="30dp"
        android:paddingEnd="@dimen/card_padding"
        android:paddingLeft="@dimen/card_padding"
        android:paddingRight="@dimen/card_padding"
        android:paddingStart="@dimen/card_padding"
        android:visibility="invisible"
        app:cardBackgroundColor="@color/beyaz"
        app:cardCornerRadius="20dp"
        tools:layout_editor_absoluteX="38dp">

        <TextView
            android:id="@+id/tv_kodBilgi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/grey_800"
            android:textSize="17sp"/>

        <Button
            android:id="@+id/btn_kod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/kod"
            android:padding="5dp"
            android:textColor="@color/beyaz"
            android:textSize="15sp"
            android:textStyle="normal"/>

        <Button
            android:id="@+id/btn_kodcikti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/kod"

            android:textColor="@color/beyaz"
            android:textSize="15sp"
            android:textStyle="normal"/>

        <Button
            android:id="@+id/btn_goster"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_circle1"
            android:onClick="btnGoster"
            android:text="GÖSTER"
            android:textColor="@color/beyaz"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_kodcikti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/cmor"
            android:textSize="20sp"/>
    </android.support.v7.widget.CardView>
    <!--KOD ÇIKTI SONU -->

    <!--KOD YAZ -->
    <LinearLayout
        android:id="@+id/ll_kodyazcalistir"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:visibility="invisible"
        android:orientation="vertical"

        android:weightSum="1">

        <Button
            android:id="@+id/btn_kodyaz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/kod"
            android:textColor="@color/beyaz"
            android:textSize="15sp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/tv_kodyazCalistir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text="aaaaaa"
            android:textColor="@color/beyaz"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edt_kodyazCalistir"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="25dp"
            android:background="@drawable/kod"
            android:hint="Yazmaya başla"
            android:padding="10dp"
            android:textColor="@color/beyaz"
            android:textColorHint="@color/console"
            android:textSize="15sp"
            android:textStyle="normal"/>

        <Button
            android:id="@+id/btn_kodyazCalistir"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="25dp"
            android:background="@drawable/btn_circle1"
            android:onClick="btnGoster"
            android:text="ÇALIŞTIR"
            android:textColor="@color/beyaz"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/iv_ipucu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_margin="10dp"
            android:visibility="invisible"
            android:background="@drawable/idea32"/>
        <TextView
            android:id="@+id/tv_ipucu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fistikyesili"
            android:gravity="bottom"
            android:layout_margin="3dp"
            android:visibility="invisible"
            android:textSize="17sp"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="30dp"
        android:paddingEnd="@dimen/card_padding"
        android:paddingLeft="@dimen/card_padding"
        android:paddingRight="@dimen/card_padding"
        android:paddingStart="@dimen/card_padding">


    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom">

        <Button
            android:id="@+id/btn_bitir"
            style="@style/ButtonStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="24dp"
            android:background="@color/fistikyesili"
            android:gravity="center"
            android:text="BİTİR"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_"
        style="@style/ButtonStyle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="40dp"
        android:text="BİTİR"
        android:textStyle="bold"
        android:visibility="invisible"/>

</android.support.design.widget.CoordinatorLayout>