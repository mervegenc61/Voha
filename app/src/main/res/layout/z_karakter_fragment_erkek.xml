<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="250dip"
              android:layout_gravity="center"
              android:orientation="vertical"
              android:weightSum="2"
              tools:context=".ZKarakterAyari.KarakterActivity" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1.7">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dip"
        android:orientation="vertical"
        android:layout_weight="0.3"

        android:layout_gravity="center">


        <HorizontalScrollView
            android:id="@+id/hsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none" >
            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/innerLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
                <LinearLayout
                    android:id="@+id/asthma_action_plan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/istekliErkek"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="40dp"
                            android:src="@drawable/res_assets_profile_profilemaleenthusiast"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="İSTEKLİ"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_marginLeft="70dp"
                            android:layout_alignBottom="@+id/istekliErkek"
                            android:textColor="@color/pembe"
                            android:layout_alignParentBottom="true"

                            />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/controlled_medication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/gezginErkek"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="40dp"
                            android:src="@drawable/res_assets_profile_profilemaletraveller"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="GEZGİN"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_marginLeft="70dp"
                            android:layout_alignBottom="@+id/gezginErkek"
                            android:textColor="@color/pembe"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout

                    android:id="@+id/as_needed_medication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/calisanErkek"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="40dp"
                            android:src="@drawable/res_assets_profile_profilemalebusiness"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="İŞ"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_marginLeft="90dp"
                            android:layout_alignBottom="@+id/calisanErkek"
                            android:textColor="@color/pembe"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout

                    android:id="@+id/as_needed_medicationn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/ogrenciErkek"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="40dp"
                            android:src="@drawable/res_assets_profile_profilemalestudent"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="ÖĞRENCİ"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_marginLeft="60dp"
                            android:layout_alignBottom="@+id/ogrenciErkek"
                            android:textColor="@color/pembe"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout

                    android:id="@+id/as_needed_medicationnn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/romantikErkek"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="40dp"
                            android:src="@drawable/res_assets_profile_profilemaleromantic"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="ROMANTİK"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_marginLeft="50dp"
                            android:layout_alignBottom="@+id/romantikErkek"
                            android:textColor="@color/pembe"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </LinearLayout>




            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</LinearLayout>


